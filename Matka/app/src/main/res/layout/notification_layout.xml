<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6000000"
    android:gravity="start"
    android:orientation="vertical">


    <ImageView
        android:background="@color/black_transparent_low"
        android:layout_marginStart="10dp"
        android:id="@+id/imglogonotif"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/tekstnotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/imglogonotif"
        android:text="Изложбен центар Матка" />

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/stop_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:src="@drawable/media_stop_icon" />


</RelativeLayout>